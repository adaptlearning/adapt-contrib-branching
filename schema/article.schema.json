{
  "$anchor": "_branching-article",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$patch": {
    "source": {
      "$ref": "article"
    },
    "with": {
      "properties": {
        "_branching": {
          "type": "object",
          "title": "Branching",
          "default": {},
          "properties": {
            "_isEnabled": {
              "type": "boolean",
              "title": "Enable branching within this article",
              "default": false
            },
            "_start": {
              "type": "string",
              "title": "Start block id",
              "description": "Leave blank to use the first block",
              "default": ""
            }
          }
        }
      }
    }
  }
}
